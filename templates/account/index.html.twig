{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<style>
    body{
        margin-top:20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }
    .main-body {
        padding: 15px;
    }
    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

    .gutters-sm>.col, .gutters-sm>[class*=col-] {
        padding-right: 8px;
        padding-left: 8px;
    }
    .mb-3, .my-3 {
        margin-bottom: 1rem!important;
    }

</style>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ app.user.username }}</h4>
                                    <p class="text-secondary mb-1">{{ app.user.roles == 0  ? "Admin" : "Utilisateur Standard"  }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <img height="50" width="50" src="https://cdn-icons-png.flaticon.com/512/1/1176.png" alt="">
                                <a href="#"><span class="text-primary">Modifier mes informations</span></a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <img height="50" width="50" src="https://cdn-icons.flaticon.com/png/512/2476/premium/2476721.png?token=exp=1638994289~hmac=90f2436084e8edc93bd86e4381ca373e" alt="">

                                <a href="#"><span class="text-primary">Ma messagerie privée</span></a>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <img height="50" width="50" src="https://cdn-icons.flaticon.com/png/512/3220/premium/3220829.png?token=exp=1638994321~hmac=5d7e8bce3a6e72c597821d775ada5e87" alt="">

                                <a href="#"><span class="text-primary">Mes amis</span></a>
                            </li>
                        </ul>
                    </div>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">produit</th>
                            <th scope="col">illustration</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col"  >gerer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for baskets in basket %}
                        <tr>
                            <th scope="row">{{ baskets.product.name }}</th>
                            <th><img height="50" width="50" src="{{ asset("uploads/"  ~ baskets.product.illustration) }}" alt=""></th>
                            <td>{{ (baskets.product.price/ 100)  }}€</td>
                            <td>{{ baskets.quantity }}</td>
                            <td><a href="{{ path("add_to_cart",{"id" :baskets.product.id }) }}"><img  height="40" width="40" src="https://cdn-icons-png.flaticon.com/512/25/25304.png" alt=""></a></td>
                            <td><a href="{{ path("decrease_to_cart",{"id" :baskets.product.id }) }}"><img  height="40" width="40" src="https://cdn-icons.flaticon.com/png/512/2734/premium/2734848.png?token=exp=1638995410~hmac=2f893974ba10ab735621eab7e2e14d7b" alt=""></a></td>
                        </tr>
                        {% endfor%}
                        </tbody>
                    </table>
                    <button class="btn btn-info" id="Payment">Payer avec Paypal</button>
                </div>
                </div>
            </div>
        </div>
{% endblock %}
